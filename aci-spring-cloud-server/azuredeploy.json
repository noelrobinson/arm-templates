{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "imageType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ]
        },
        "imageName": {
            "type": "string"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ]
        },
        "numberCpuCores": {
            "type": "string"
        },
        "memory": {
            "type": "string"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ]
        },
        "springProfileActive": {
            "type": "string"
        },
        "springSecurityUserName": {
            "type": "string"
        },
        "springSecurityPassword": {
            "type": "secureString"
        },
        "configServerGitUrl": {
            "type": "string"
        },
        "ignoreLocalSshSetting": {
            "type": "string"
        },
        "hostKeyChecking": {
            "type": "string"
        },
        "gitPrivateKey": {
            "type": "string"
        },
        "ipAddressType": {
            "type": "string"
        },
        "ports": {
            "type": "array"
        },
        "dnsNameLabel": {
            "type": "string"
        }
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "SPRING_PROFILES_ACTIVE",
                                    "value": "[parameters('springProfileActive')]"
                                },
                                {
                                    "name": "SPRING_SECURITY_USER_NAME",
                                    "value": "[parameters('springSecurityUserName')]"
                                },
                                {
                                    "name": "SPRING_SECURITY_USER_PASSWORD",
                                    "secureValue": "[parameters('springSecurityPassword')]"
                                },
                                {
                                    "name": "SPRING_CLOUD_CONFIG_SERVER_GIT_URI",
                                    "value": "[parameters('configServerGitUrl')]"
                                },
                                {
                                    "name": "SPRING_CLOUD_CONFIG_SERVER_GIT_IGNORELOCALSSHSETTINGS",
                                    "value": "[parameters('ignoreLocalSshSetting')]"
                                },
                                {
                                    "name": "SPRING_CLOUD_CONFIG_SERVER_GIT_STRICTHOSTKEYCHECKING",
                                    "value": "[parameters('hostKeyChecking')]"
                                },
                                {
                                    "name": "SPRING_CLOUD_CONFIG_SERVER_GIT_PRIVATEKEY",
                                    "value": "[parameters('gitPrivateKey')]"
                                }

                            ],
                            "ports": "[parameters('ports')]"
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "ipAddress": {
                    "type": "[parameters('ipAddressType')]",
                    "ports": "[parameters('ports')]",
                    "dnsNameLabel": "[parameters('dnsNameLabel')]"
                }
            },
            "tags": {
                "billTo": "national-trust"
            }
        }
    ]
}